{
  "downstream" : {
    "url" : "http://localhost:8081"
  },
  "presets" : [ {
    "name" : "admin_user",
    "headers" : {
      "Authorization" : "Bearer admin-jwt-token",
      "X-User-Role" : "admin",
      "X-User-ID" : "admin-001",
      "X-Forwarded-By" : "Proxima-Proxy"
    },
    "displayName" : "Admin User",
    "headerMappings" : {
      "Authorization" : "Source-Authorization",
      "User-Agent" : "Source-User-Agent"
    }
  }, {
    "name" : "regular_user",
    "headers" : {
      "Authorization" : "Bearer user-jwt-token",
      "X-User-Role" : "user",
      "X-User-ID" : "user-001",
      "X-Forwarded-By" : "Proxima-Proxy"
    },
    "displayName" : "Regular User",
    "headerMappings" : {
      "Authorization" : "Original-Auth"
    }
  }, {
    "name" : "api_client",
    "headers" : {
      "Authorization" : "Bearer api-client-token",
      "X-Client-Type" : "api",
      "X-Rate-Limit" : "1000",
      "X-Forwarded-By" : "Proxima-Proxy"
    },
    "displayName" : "API Client",
    "headerMappings" : { }
  } ],
  "routes" : [
    {
      "name": "users-api",
      "pathPattern": "/api/users/**",
      "targetUrl": "http://localhost:8081",
      "description": "User management API",
      "enabled": true
    },
    {
      "name": "auth-api",
      "pathPattern": "/api/auth/**",
      "targetUrl": "http://localhost:8081",
      "description": "Authentication API",
      "enabled": true
    },
    {
      "name": "data-api",
      "pathPattern": "/api/data/**",
      "targetUrl": "http://localhost:8081",
      "description": "Data management API",
      "enabled": true
    }
  ],
  "activePreset" : "admin_user",
  "reservedRoutes" : [ "/proxima/**", "/actuator/**" ]
}