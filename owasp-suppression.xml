<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress test dependencies -->
    <suppress>
        <notes>Test dependencies should not trigger production security alerts</notes>
        <gavPattern>.*:.*:.*</gavPattern>
        <cve>CVE-2023-20883</cve>
        <cve>CVE-2023-20861</cve>
    </suppress>

    <!-- Spring Boot false positives -->
    <suppress>
        <notes>Spring Boot starter dependencies often trigger false positives</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/.*$</packageUrl>
        <vulnerabilityName>sonatype-2020-0926</vulnerabilityName>
    </suppress>

    <!-- MockWebServer test dependency -->
    <suppress>
        <notes>Test-only dependency for integration testing</notes>
        <packageUrl regex="true">^pkg:maven/com\.squareup\.okhttp3/mockwebserver.*$</packageUrl>
    </suppress>
</suppressions>